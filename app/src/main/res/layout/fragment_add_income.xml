<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Ngày -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Tiêu đề + Icon trái -->
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDateLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Ngày"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivPrevDate"
                    android:layout_width="0dp"
                    android:layout_height="14dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_chevron_left"
                    android:layout_gravity="center_vertical"
                    app:tint="@android:color/background_light"
                    android:contentDescription="Previous Date" />
            </LinearLayout>

            <!-- Ngày được chọn -->
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_edittext"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <!-- Icon phải -->
            <ImageView
                android:id="@+id/ivNextDate"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_chevron_right"
                app:tint="@android:color/background_light"
                android:contentDescription="Next Date" />

        </LinearLayout>

        <!-- Ghi chú  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/tvNoteLabel"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="Ghi chú"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Nội dung ghi chú -->
            <TextView
                android:id="@+id/tvNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chưa nhập vào"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginStart="3dp" />
        </LinearLayout>

        <!-- Số tiền (dòng gồm: Tiền thu | ô nhập | đ) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/tvAmountLabel"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Tiền thu"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Ô nhập -->
            <EditText
                android:id="@+id/etAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext"
                android:gravity="end"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:text="0"
                android:textColor="@android:color/black" />

            <!-- Đơn vị -->
            <TextView
                android:id="@+id/tvCurrency"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:text="đ"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!--Danh mục-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh mục"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"/>

        <!-- Grid danh mục -->
        <GridLayout
            android:id="@+id/gridCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:padding="4dp"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Tiền lương -->

            <!-- Tiền phụ cấp -->
            <LinearLayout
                android:id="@+id/itemSalary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@drawable/bg_category_item"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_income" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Tiền lương"
                    android:textColor="@android:color/background_dark"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemSubvention"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/bg_category_item">
                <ImageView
                    android:src="@drawable/ic_save"
                    android:layout_width="32dp"
                    android:layout_height="32dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền phụ cấp"
                    android:textColor="@android:color/background_dark"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- Tiền thưởng -->
            <LinearLayout
                android:id="@+id/itemBonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/bg_category_item">
                <ImageView
                    android:src="@drawable/ic_gift"
                    android:layout_width="32dp"
                    android:layout_height="32dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền thưởng"
                    android:textColor="@android:color/background_dark"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- Tiền đầu tư -->
            <LinearLayout
                android:id="@+id/itemInvest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/bg_category_item">
                <ImageView
                    android:src="@drawable/ic_invest"
                    android:layout_width="32dp"
                    android:layout_height="32dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền đầu tư"
                    android:textColor="@android:color/background_dark"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>
        </GridLayout>

        <!-- Nút lưu -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập khoản Tiền chi"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:textColor="@android:color/black"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>